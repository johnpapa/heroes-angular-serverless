    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "concurrently": "^4.1.0",
    "dotenv": "^7.0.0",
    "jasmine-core": "~2.99.1",

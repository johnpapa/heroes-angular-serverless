{
  "name": "heroes-angular-serverless",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "ng:serve": "ng serve --proxy-config proxy.conf.json",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "node:build-ts": "tsc -p server",
    "node:watch-ts": "tsc -w -p server",
    "node:tslint": "tslint -c tslint.json -p server",
    "node:debug": "WWW=./dist/heroes-angular-serverless npx nodemon -r dotenv/config --inspect=9229 server/dist/index.js",
    "node:start": "WWW=./dist/heroes-angular-serverless node -r dotenv/config server/dist/index.js",
    "node-ng:debug": "concurrently \"npm run node:debug\" \"npm run ng:serve\"",
    "node-ng:start": "concurrently \"npm run node:start\" \"npm run ng:serve\"",
    "start": "npm run ng:serve"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/http": "~7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "@fortawesome/angular-fontawesome": "^0.3.0",
    "@fortawesome/fontawesome-free": "^5.4.2",
    "@fortawesome/fontawesome-svg-core": "^1.2.7",
    "@fortawesome/free-solid-svg-icons": "^5.4.2",
    "@ngrx/effects": "^7.4.0",
    "@ngrx/entity": "^7.4.0",
    "@ngrx/store": "^7.4.0",
    "@ngrx/store-devtools": "^7.4.0",
    "angular-font-awesome": "^3.1.2",
    "bulma": "^0.7.4",
    "core-js": "^2.5.4",
    "font-awesome": "^4.7.0",
    "ngrx-data": "^6.1.0-beta.3",
    "rxjs": "~6.5.1",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.0",
    "@angular/cli": "~7.3.8",
